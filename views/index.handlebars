<h1>Burger Builder!</h1>

<h2>Burger Builder</h2>

<ul>
  {{#each burgers}} {{#unless devour}}
  <li>
    {{burger_name}}

    <button class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
      {{#if devour}}Burger Time!{{else}}Devour!{{/if}}
    </button>

    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </li>
  {{/unless}} {{/each}}
</ul>

<h2>Burger Builder</h2>

<ul>
  {{#each burgers}} {{#if devour}}
  <li>
    {{name}}

    <button class="change-devour" data-id="{{id}}" data-newsleep="{{devour}}">
      {{#if devour}}Burger Time!{{else}}Devour!{{/if}}
    </button>

    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </li> {{/if}} {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgers">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Burger Builder?</label>
    <br>
    <input type="radio" name="eaten" value="1" checked> Burger Builder!
    <br>
    <input type="radio" name="eaten" value="0"> Hungry
  </div>

  <button type="submit">Add Burger</button>
</form>